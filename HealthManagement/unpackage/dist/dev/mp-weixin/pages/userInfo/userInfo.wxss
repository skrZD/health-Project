
/* 定义颜色变量 */
.data-v-875c692e:root {
	--main-color: #4A89FF;
	--warning-color: #FFCC00;
	--danger-color: #F5296E;
	--background-color: #f7f8f9;
	--card-background: #ffffff;
	--text-color-primary: #333333;
	--text-color-secondary: #666666;
	--border-color: #ebebeb;
	--box-shadow: 0px 2px 8px rgba(99, 99, 99, 0.1);
}
.userInfoPage.data-v-875c692e {
	width: 100%;
	min-height: 100vh;
	padding-bottom: 3vh;
	background-color: var(--background-color);
}
.card_box.data-v-875c692e {
	width: 95%;
	margin: 15px auto;
	background-color: var(--card-background);
	border-radius: 12px;
	box-shadow: var(--box-shadow);
	padding: 20px;
	box-sizing: border-box;
}
.profile_header.data-v-875c692e {
	display: flex;
	align-items: center;
	padding-bottom: 20px;
}
.avatar_container.data-v-875c692e {
	position: relative;
	margin-right: 20px;
}
.user_avatar.data-v-875c692e {
	width: 80px;
	height: 80px;
	border-radius: 50%;
	border: 3px solid #f0f0f0;
}
.avatar_edit.data-v-875c692e {
	position: absolute;
	bottom: 0;
	right: 0;
	background-color: var(--danger-color);
	color: white;
	padding: 2px 8px;
	border-radius: 12px;
	font-size: 12px;
	line-height: 1.5;
}
.user_basic.data-v-875c692e {
	flex: 1;
}
.user_name.data-v-875c692e {
	font-size: 20px;
	font-weight: bold;
	color: var(--text-color-primary);
	margin-bottom: 5px;
}
.user_id.data-v-875c692e {
	font-size: 14px;
	color: var(--text-color-secondary);
	margin-bottom: 5px;
}
.user_level.data-v-875c692e {
	display: flex;
	align-items: center;
	font-size: 14px;
	color: var(--danger-color);
}
.level_icon.data-v-875c692e {
	margin-right: 5px;
}
.profile_stats.data-v-875c692e {
	display: flex;
	justify-content: space-around;
	padding-top: 20px;
	border-top: 1px solid var(--border-color);
}
.stat_item.data-v-875c692e {
	text-align: center;
}
.stat_number.data-v-875c692e {
	font-size: 18px;
	font-weight: bold;
	color: var(--text-color-primary);
}
.stat_label.data-v-875c692e {
	font-size: 12px;
	color: var(--text-color-secondary);
	margin-top: 5px;
}
.section_title.data-v-875c692e {
	font-size: 18px;
	font-weight: bold;
	color: var(--text-color-primary);
	padding-bottom: 15px;
	border-bottom: 1px solid var(--border-color);
	margin-bottom: 15px;
}
.setting_item.data-v-875c692e, .goal_item.data-v-875c692e {
	display: flex;
	align-items: center;
	padding: 15px 0;
	border-bottom: 1px solid var(--border-color);
}
.setting_item.data-v-875c692e:last-child, .goal_item.data-v-875c692e:last-child {
	border-bottom: none;
}
.setting_icon.data-v-875c692e, .goal_icon.data-v-875c692e {
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	font-size: 20px;
	margin-right: 15px;
}
.setting_content.data-v-875c692e, .goal_content.data-v-875c692e {
	flex: 1;
}
.setting_label.data-v-875c692e, .goal_label.data-v-875c692e {
	font-weight: bold;
	color: var(--text-color-primary);
	margin-bottom: 5px;
}
.setting_value.data-v-875c692e, .goal_value.data-v-875c692e {
	font-size: 14px;
	color: var(--text-color-secondary);
}
.setting_desc.data-v-875c692e {
	font-size: 12px;
	color: #999;
}
.setting_arrow.data-v-875c692e {
	color: #ccc;
	font-size: 16px;
}
.goal_edit_btn.data-v-875c692e {
	background-color: var(--main-color);
	color: white;
	padding: 5px 12px;
	border-radius: 15px;
	font-size: 12px;
}
.dot.data-v-875c692e {
	font-size: 30px;
	line-height: 1;
}
.setting_switch.data-v-875c692e {
	transform: scale(0.8);
}
.logout_box.data-v-875c692e {
	width: 95%;
	margin: 15px auto;
}
.logout_btn.data-v-875c692e {
	background-color: #ff4757;
	color: white;
	text-align: center;
	padding: 15px;
	border-radius: 12px;
	font-weight: bold;
}
