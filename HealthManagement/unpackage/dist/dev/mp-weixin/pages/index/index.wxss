
	/* 定义颜色变量 */
.data-v-1cf27b2a:root {

		--main-color: #4A89FF;

		--warning-color: #FFCC00;

		--danger-color: #F5296E;

		--background-color: #f7f8f9;

		--card-background: #ffffff;

		--text-color-primary: #333333;

		--text-color-secondary: #666666;

		--border-color: #ebebeb;

		--box-shadow: 0px 2px 8px rgba(99, 99, 99, 0.1);
}
.roomElement.data-v-1cf27b2a {

		width: 100%;

		min-height: 100vh;

		background-color: var(--background-color);

		padding-bottom: 3vh;
}
.card_box.data-v-1cf27b2a {

		width: 95%;

		margin: 15px auto;

		background-color: var(--card-background);

		border-radius: 12px;

		box-shadow: var(--box-shadow);

		padding: 20px;

		box-sizing: border-box;
}
.overview_box.data-v-1cf27b2a {

		height: auto;
		/* 使用 auto 适应内容 */

		padding-top: 20px;

		border-radius: 0 0 12px 12px;

		margin-top: 0;
}
.charts-box.data-v-1cf27b2a {

		width: 100%;

		height: 250px;
		/* 固定高度确保图表显示 */
}
.information_box.data-v-1cf27b2a {

		display: flex;

		justify-content: space-around;

		text-align: center;

		margin-top: 20px;

		padding-top: 20px;

		border-top: 1px dashed var(--border-color);
}
.stat_item.data-v-1cf27b2a {

		width: 33%;

		text-align: left;
}
.stat_title.data-v-1cf27b2a {

		font-size: 14px;

		color: var(--text-color-secondary);

		display: flex;

		align-items: center;
}
.dot.data-v-1cf27b2a {

		font-size: 24px;

		margin-right: 5px;
}
.stat_content.data-v-1cf27b2a {

		font-size: 14px;

		padding-top: 5px;

		color: var(--text-color-secondary);
}
.stat_content .value.data-v-1cf27b2a {

		font-size: 18px;

		font-weight: bold;

		color: var(--text-color-primary);
}
.section_title.data-v-1cf27b2a {

		font-size: 18px;

		font-weight: bold;

		color: var(--text-color-primary);
}
.diet_box.data-v-1cf27b2a {

		padding: 20px;
}
.diet_title_bar.data-v-1cf27b2a {

		display: flex;

		align-items: center;

		justify-content: space-between;

		padding-bottom: 15px;

		border-bottom: 1px solid var(--border-color);

		margin-bottom: 15px;
}
.diet_actions.data-v-1cf27b2a {
		display: flex;
		gap: 10px; /* 添加按钮间距 */
}
.diet_btn.data-v-1cf27b2a {

		background-color: var(--danger-color);

		color: #fff;

		border: none;

		padding: 8px 16px;

		border-radius: 20px;

		font-size: 14px;

		line-height: 1;

		height: auto;

		min-width: 80px;

		text-align: center;
}
.diet_list.data-v-1cf27b2a {

		/* 列表容器 */
}
.list_item.data-v-1cf27b2a {

		display: flex;

		align-items: center;

		padding: 15px 0;

		border-bottom: 1px solid var(--border-color);
}
.list_item.data-v-1cf27b2a:last-child {

		border-bottom: none;
}
.record_ico.data-v-1cf27b2a {

		width: 40px;

		height: 40px;

		border-radius: 50%;

		overflow: hidden;

		margin-right: 15px;

		flex-shrink: 0;
}
.record_ico image.data-v-1cf27b2a {

		width: 100%;

		height: 100%;
}
.diet_content.data-v-1cf27b2a {

		flex: 1;
}
.diet_type.data-v-1cf27b2a {

		font-weight: bold;

		font-size: 16px;

		color: var(--text-color-primary);
}
.diet_info.data-v-1cf27b2a {

		color: var(--text-color-secondary);

		font-size: 14px;

		margin-top: 5px;
}
.diet_info .value.data-v-1cf27b2a {

		font-weight: bold;

		color: var(--text-color-primary);
}
.diet_right.data-v-1cf27b2a {

		font-weight: bold;

		font-size: 18px;

		color: #ccc;

		padding-left: 15px;
}



	/* 弹窗样式优化 */
.modal_mask.data-v-1cf27b2a {

		position: fixed;

		left: 0;

		top: 0;

		right: 0;

		bottom: 0;

		background: rgba(0, 0, 0, 0.5);

		z-index: 999;
}
.modal_container.data-v-1cf27b2a {

		position: fixed;

		left: 50%;

		top: 50%;

		transform: translate(-50%, -50%);

		width: 85vw;

		max-width: 350px;

		background: var(--card-background);

		border-radius: 12px;

		padding: 24px;

		box-shadow: var(--box-shadow);

		z-index: 1000;
}
.modal_title.data-v-1cf27b2a {

		font-size: 20px;

		font-weight: bold;

		text-align: center;

		margin-bottom: 24px;

		color: var(--text-color-primary);
}
.form_row.data-v-1cf27b2a {

		display: flex;

		align-items: center;

		margin-bottom: 16px;
}
.form_label.data-v-1cf27b2a {

		color: var(--text-color-secondary);

		font-size: 14px;

		width: 30%;

		flex-shrink: 0;
}
.form_input.data-v-1cf27b2a,

	.picker_value.data-v-1cf27b2a {

		flex: 1;

		height: 44px;

		line-height: 44px;

		background: var(--background-color);

		border-radius: 8px;

		padding: 0 12px;

		font-size: 14px;

		border: 1px solid var(--border-color);

		box-sizing: border-box;
}
.form_input.data-v-1cf27b2a::-webkit-input-placeholder {

		color: #999;
}
.form_input.data-v-1cf27b2a::placeholder {

		color: #999;
}
.picker_value.data-v-1cf27b2a {

		color: var(--text-color-primary);
}
.modal_actions.data-v-1cf27b2a {

		display: flex;

		justify-content: space-between;

		gap: 12px;

		margin-top: 24px;
}
.btn_cancel.data-v-1cf27b2a,

	.btn_confirm.data-v-1cf27b2a {

		flex: 1;

		height: 44px;

		line-height: 44px;

		border: none;

		border-radius: 8px;

		font-size: 16px;

		text-align: center;

		min-width: 0;
		/* Ensures flex works properly */
}
.btn_cancel.data-v-1cf27b2a {

		background: #eee;

		color: var(--text-color-primary);
}
.btn_confirm.data-v-1cf27b2a {

		background: var(--danger-color);

		color: #fff;
}
.selected_food.data-v-1cf27b2a {

		flex: 1;

		height: 44px;

		line-height: 44px;

		background: #f0f8ff;

		border-radius: 8px;

		padding: 0 12px;

		font-size: 14px;

		color: var(--main-color);

		border: 1px solid #e6f3ff;

		box-sizing: border-box;
}
